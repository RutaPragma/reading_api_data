# EditorConfig ayuda a mantener estilos de codificación consistentes
# en diferentes editores e IDEs.
# Documentación: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Archivos Dart y Flutter
[*.{dart}]
indent_size = 2
max_line_length = 80

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# Archivos JSON
[*.json]
indent_size = 2

# Archivos Markdown
[*.md]
trim_trailing_whitespace = false

# Archivos de Gradle/Kotlin
[*.{gradle,kts}]
indent_size = 4

# Archivos de Java
[*.java]
indent_size = 4

# Archivos de Swift
[*.swift]
indent_size = 4